# Supabase Configuration
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_KEY=your-anon-public-key-here

# IMPORTANT: Add this for auto-verified email on invitation acceptance
# Get from: Supabase Dashboard → Project Settings → API → service_role key
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# Django Secret Key
SECRET_KEY=your-secret-key-here

# Debug Mode
DEBUG=True

# Allowed Hosts (comma-separated)
ALLOWED_HOSTS=localhost,127.0.0.1

# Email Configuration (Gmail example)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password-here
DEFAULT_FROM_EMAIL=SmartRetail <your-email@gmail.com>

# Application Settings
APP_URL=http://localhost:8000
INVITATION_EXPIRY_HOURS=48

# For development without email: Use console backend
# EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
